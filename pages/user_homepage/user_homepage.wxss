.box_s{
  width: 100%;
  height:100vh ;
  background: rgba(255, 255, 255, .5);
  position: fixed;
  left: 0;
  top: 0;
  z-index: -1;
}
.user_box{
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
}
.user_head_img{
  width: 200rpx;
  height: 180rpx;
  border-radius: 200rpx;
  margin-left: 10rpx;
}
.user_text{
  width: 80%;
  height: 200rpx;
  margin-left: 30rpx;
  /* border: 1px solid; */
}
.user_details{
  width: 70rpx;
  height: 70rpx;
}
.user_text_top,.user_text_bottom{
  width: 100%;
  height: 50%;
  display: flex;
  align-items: center;
  /* border: 1px solid; */
}
.user_name{
  margin-left: 30rpx;
  font-weight: bold;
  max-width: 350rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  /* border: 1px solid; */
}
.vip{
  border-radius: 20rpx;
  font-size: 26rpx;
  background: #E9D83C;
  padding: 5rpx 30rpx;
  margin-left: 30rpx;
}
.user_text_bottom{
  font-size: 25rpx;
}
.user_text_bottom_details{
  border-radius: 10rpx;
  background: #1EAEA4;
  padding: 5rpx 10rpx;
  margin-right: 30rpx;
}
.echarts{
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: space-around;
  /* border: 1px solid; */
}
.echart_panel{
  width: 30%;
  height: 150rpx;
  /* border: 1px solid; */
  position: relative;
}
.echarts_title{
  width: 100%;
  text-align: center;
  position: absolute;
  left: 0;
  top: 30%;
  color: white;
  font-size: 25rpx;
}
.echarts_number{
  width: 100%;
  text-align: center;
  position: absolute;
  left: 0;
  top: 55%;
  color: white;
  font-size: 25rpx;
}