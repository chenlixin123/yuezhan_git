  justify-content: center;
  margin-bottom: 30rpx;
}
.moneys_img{
  width: 50rpx;
  height: 50rpx;
}
.moneys_text{
  color: white;
  margin-left: 10rpx;
  font-size: 38rpx;
}
.Recharge_btn{
  width: 100%;
  height: 100rpx;
  color: white;
  text-align: center;
  line-height: 100rpx;
  background: #34BEC3;
  position: fixed;
  left: 0;
  bottom: 0;
  font-weight: bold;
}