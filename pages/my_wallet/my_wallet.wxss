.money_number{
  width: 100%;
  font-size: 100rpx;
  margin-top: 30rpx;
  color: white;
  text-align: center;
  position: relative;
  /* border: 1px solid; */
}
.money_text{
  width: 100%;
  font-size: 40rpx;
  color: white;
  text-align: center;
  margin-top: -20rpx;
  /* border: 1px solid; */
}
.money_img{
  width: 90rpx;
  height: 90rpx;
