    <image class="icon_img" src="../../assets/icon/bisai.png"></image>
    <view class="icon_text">比赛中心</view>
  </view>
  <view class="icon" bindtap="ranking">
    <image class="icon_img" src="../../assets/icon/paihang.png"></image>
    <view class="icon_text">排行榜</view>
  </view>
  <view class="icon" bindtap="team">
    <image class="icon_img" src="../../assets/icon/zhandui.png"></image>
    <view class="icon_text">战队列表</view>
  </view>
</view>
