<view class="box">
<view class="search">
  <view class="address">
    北京
  </view>
    <input class="input_search" type="text" placeholder="玩家名称/对战名称/赛事名称" placeholder-style="color:#ddd;font-size:30rpx;" />
</view>
<view class="carousel"> 
  <swiper indicator-dots="true" autoplay="true" interval="5000" duration="500" indicator-dots="true" style="width:100%;height:300rpx;">
        <block wx:for="{{image_data}}" wx:key="{{item.id}}">
          <swiper-item>
            <image style="width:100%;height:300rpx;" src="{{item.path}}" alt=""></image>
          </swiper-item>
        </block>
      </swiper>
</view>
<view class="icons">
  <view class="icon" bindtap="fight">
    <image class="icon_img" src="../../assets/icon/duizhan.png"></image> 
    <view class="icon_text">对战中心</view>
  </view>
