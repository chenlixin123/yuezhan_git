  <view class="box_center">
    <view class="box_center_top">
      <image class="img" src="../../assets/image/zhandui.jpg"></image>
      <view class="center_text">
        <view class="content_title">
          北理工LOL王者战队
        </view>
        <view class="content_title">
          战队ID：87800778
        </view>
        <view class="number">
          战队人数：5
        </view>
        <view class="model">
          联系方式：15503062258
        </view>
        <view class="information">
          <view>游戏币1000</view>
          <view>胜率98%</view>
          <view>场次1000</view>
