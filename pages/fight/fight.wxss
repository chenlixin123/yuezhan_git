.top{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  justify-items: center;
}
.background_img{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -100;
}
.bgm{
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(255, 255, 255, .3);
}
.select-box {
  position: relative;
  width: 170rpx;
  height: 75rpx;
  font-size: 30rpx;
  margin-top: 15rpx;
  z-index: 100;
  /* border: 1px solid; */
  
 }
 .current_name{
  display: inline-block;
  width: 120rpx ;
  /* height: 55rpx; */
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis; 
  white-space: nowrap;
  text-align: center;
  font-size: 27rpx;
  /* border: 1px solid red; */
 }
 .select-current {
  position: relative;
  width: 100%;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 18rpx;
  box-sizing: border-box;
  text-overflow : ellipsis;
 }
  
 .select-current::after {
  position: absolute;
  display: block;
  right: 16rpx;
  top: 25rpx;
  z-index: 100;
  content: '';
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top: 10rpx solid black;
 }
 .option-list{
  overflow: hidden;
  text-overflow:ellipsis; 
  white-space: nowrap;
  width: 170rpx;
  background: rgb(248, 247, 247);
  text-align: center;
  /* border-radius: 10rpx; */
  font-size: 27rpx;
 }
 .content{
  width: 100%;
  height: 200rpx;
  margin-top: 3rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 23rpx;
  font-weight: 400;
  background: #C069FA;
  position: relative;
}
.content_img{
  width: 150rpx;
  height: 160rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.content_title{
  font-weight: bold;
  font-size: 25rpx;
}
.winning{
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.details{
  display: flex;
}
.content_btn{
  width: 150rpx;
  height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 15rpx;
  background: #34BEC3;
  position: absolute;
  right: 60rpx;
  bottom: 30rpx;
  z-index: 100;
}
  