/* orders.wxss */
page{background-color:#f9f8f9;}
.nav{width:100%;height:100rpx;display:flex;flex-direction:row;background-color:white;}
.default{line-height:100rpx;text-align:center;flex:1;border-right:none;color:black;font-size:28rpx;}
.red{line-height:100rpx;text-align:center;color:red;flex:1;border-right:none; border-bottom: 4rpx solid red;font-size:28rpx;}
.show{display:block;}
.hidden{display:none;}
.content{
  width: 100%;
  font-size: 23rpx;
  font-weight: 400;
  display: flex;
  /* justify-content: space-around; */
  flex-wrap: wrap;
}
.content_content{
  width: 50%;
  margin-bottom: 20rpx;
  /* border: 1px solid; */
}
.content_img{
  width: 95%;
  height: 280rpx;
  margin-left: 2.5%;
}
.content_text{
  width: 90%;
  margin-left: 5%;
}
.tence{
  font-size: 30rpx;
}
.prize{
  font-size: 33rpx;
  display: flex;
  align-items: center;
  color: #D74522;
}
.vip{
  font-size: 28rpx;
  height: 25rpx;
  line-height: 25rpx;
  border: 1px solid #D74522;
  background: #D74522;
  padding: 6rpx 15rpx;
  color: white;
  border-radius: 30rpx;
  margin-left: 10rpx;
}
.btn{
  width: 60%;
  height: 50rpx;
  line-height: 50rpx;
  background: #D08A16;
  border-radius: 35rpx;
  text-align: center;
  color: white;
  margin-left: 15%;
  margin-top: 20rpx;
  font-size: 28rpx;
}
  