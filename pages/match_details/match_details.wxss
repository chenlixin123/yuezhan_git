.box{
  width: 100%;
  height: 100vh;
}
.background_img{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -3;
}
.bgm{
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(255, 255, 255, .3);
  z-index: -2;
}
.box_center{
  width: 100%;
  height: 700rpx;
  background: rgba(149, 70, 204, .7);
  border-bottom-right-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  /* border: 1px solid; */
}
.box_center_top{
  display: flex;
}
.content_title{
  font-weight: bold;
  color: white;
  font-size: 28rpx;
}
.center_text{
  font-size: 25rpx;
  margin-left: 50rpx;
  margin-right: 30rpx;
  margin-top: 55rpx;
  color: white;
  /* border: 1px solid; */
}
.img{
  width: 250rpx;
  height: 260rpx;
  margin-top: 65rpx;
  margin-left: 30rpx;
}
.box_center_bottom{
  font-size: 25rpx;
  color: white;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.box_center_bottom_title{
  font-size: 31rpx;
  font-weight: bold;
  color: white;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.box_btn{
  width:100%;
  height: 60rpx;
  margin: 0 auto;
  margin-top: 300rpx;
  /* border: 1px solid white; */
  display: flex;
  justify-content: space-around;
}
.btn{
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  background: white;
  text-align: center;
  border-radius: 15rpx;
}