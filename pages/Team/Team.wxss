/* orders.wxss */
page{background-color:#f9f8f9;}
.nav{width:100%;height:100rpx;display:flex;flex-direction:row;}
.default{line-height:100rpx;text-align:center;flex:1;border-right:none;color:black;font-size:28rpx;}
.red{line-height:100rpx;text-align:center;color:white;flex:1;border-right:none; border-bottom: 4rpx solid white;font-size:28rpx;}
.show{display:block;}
.hidden{display:none;}
.background_img{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -3;
}
.content{
  width: 100%;
  height: 200rpx;
  margin-top: 3rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 23rpx;
  font-weight: 400;
  background: #C069FA;
  position: relative;
}
.content_text{
  height: 80%;
  /* border: 1px solid; */
}
.content_img{
  width: 150rpx;
  height: 160rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.content_title{
  font-weight: bold;
  height: 40rpx;
  line-height: 40rpx;
  /* border: 1px solid; */
  font-size: 25rpx;
}
.content_time{
  height: 40rpx;
  line-height: 40rpx;
}
.prize{
  height: 40rpx;
  line-height: 40rpx;
}
.winning{
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.winning1{
  margin-left: 10rpx;
  margin-right: 20rpx;
}
.details{
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
}
.add_box{
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 100rpx;
  text-align: center;
}
.add_img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 60rpx;
}
  